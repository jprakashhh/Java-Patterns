<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/co"
    tools:context="com.android.jayaprakash.patternsinjava.WebView">

    <WebView
        android:id="@+id/jp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        fab:menu_fab_size="normal"
        fab:menu_showShadow="true"
        fab:menu_shadowColor="#668c7b7b"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_colorNormal="#DA4336"
        fab:menu_colorPressed="#E75043"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_animationDelayPerItem="50"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_buttonSpacing="0dp"
        fab:menu_labels_margin="0dp"

        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_paddingRight="4dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="4dp"
        fab:menu_labels_padding="4dp"
        fab:menu_labels_textColor="#FFFFFF"
        fab:menu_labels_textSize="14sp"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_colorNormal="#333333"
        fab:menu_labels_colorPressed="#444444"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="left"
        fab:menu_openDirection="up"
        fab:menu_fab_label="Choose an action">
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rate"
            fab:fab_size="mini"
            fab:fab_label="copy" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/aboutme"
            fab:fab_size="mini"
            fab:fab_label="About me" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/rateApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rate"
            fab:fab_size="mini"
            fab:fab_label="Rate App" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message"
            fab:fab_size="mini"
            fab:fab_label="Contact me" />

    </com.github.clans.fab.FloatingActionMenu>
</RelativeLayout>
